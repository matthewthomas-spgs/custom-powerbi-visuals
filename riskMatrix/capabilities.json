{
    "privileges": [
        {
            "name": "WebAccess",
            "essential": true
        }
    ],
    "suppressDefaultTitle": true,
    "dataRoles": [
        {
            "displayName": "Risk Label",
            "name": "category",
            "kind": "Grouping"
        },
        {
            "displayName": "Consequence Rating",
            "name": "riskConsequenceRating",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "integer": true
                }
            ]
        },
        {
            "displayName": "Likelihood Rating",
            "name": "riskLikelihoodRating",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "integer": true
                }
            ]
        },
        {
            "displayName": "Risk Name",
            "name": "SelectedRiskName",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "text": true
                }
            ]
        },
        {
            "name": "tooltips",
            "kind": "Grouping",
            "displayName": "Tooltips"
        }
    ],
    "dataViewMappings": [
        {
           "categorical": {
                "categories": {
                    "select": [
                        {
                            "for": {
                                "in": "category"
                            }
                        }, 
                        {
                            "for": {
                                "in": "tooltips"
                            }
                        }
                    ]
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "riskConsequenceRating"
                            }
                        },
                        {
                            "bind": {
                                "to": "riskLikelihoodRating"
                            }
                        },
                        {
                            "bind": {
                                "to": "SelectedRiskName"
                            }
                        }
                    ]
                }
           }
        }
    ]
}